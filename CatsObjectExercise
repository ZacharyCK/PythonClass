#Given the below class:
class Cat:
    species = 'mammal'

    def __init__(self, name, age):
        self.name = name
        self.age = age


# 1 Instantiate the Cat object with 3 cats
wiskers = Cat('Wiskers', 8)
kitty = Cat('Kitty', 3)
bob = Cat('Bob', 12)


# 2 Create a function that finds the oldest cat
def FindOldestCat(cats):
    OldestAge = 0

    for i in cats:
        if i.age > OldestAge:
            OldestAge = i.age
            OldestCat = i

    return OldestCat


# 3 Print out: "The oldest cat is x years old.". x will be the oldest cat age by using the function in #2
OldestCat = FindOldestCat([wiskers, kitty, bob])

print('The oldest cat is {} years old.'.format(OldestCat.age))
